@model PetsWeb.Models.PhysicalExamination
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Physical Examination
    </div>
    <div class="panel-body">
        <div class="col-lg-12">
            <div class="col-md-4">
                @Html.LabelFor(m => m.AnimalName)
                @Html.TextBoxFor(m => m.AnimalName, new { @id = "AnimalName", @class = "form-control", @readonly = "readonly" })
                @Html.LabelFor(m => m.OwnerName)<span style="color:red">*</span>
                @Html.TextBoxFor(m => m.OwnerName, new { @id = "OwnerName", autofocus = "autofocus", @class = "form-control" })
                @Html.LabelFor(m => m.Species)<span style="color:red">*</span>
                @Html.TextBoxFor(m => m.Species, new { @id = "Species", autofocus = "autofocus", @class = "form-control" })

            </div>


            <div class="col-md-4">
                @Html.LabelFor(m => m.Breed)<span style="color:red">*</span>
                @Html.TextBoxFor(m => m.Breed, new { @id = "Breed", autofocus = "autofocus", @class = "form-control" })
                @Html.LabelFor(m => m.Sex)<span style="color:red">*</span>
                @Html.TextBoxFor(m => m.Sex, new { @id = "Sex", autofocus = "autofocus", @class = "form-control" })

                @Html.LabelFor(m => m.CoatColour)<span style="color:red">*</span>
                @Html.TextBoxFor(m => m.CoatColour, new { @id = "CoatColour", autofocus = "autofocus", @class = "form-control" })

            </div>


            <div class="col-md-4">
                @Html.LabelFor(m => m.DateOfBirth)*
                @Html.TextBoxFor(m => m.DateOfBirth, new { @id = "DateOfBirth", @class = " form-control", @Value = Model.DateOfBirth.ToString("dd/MM/yyyy") })
               

            </div>
        </div>
    </div>
    <div class="panel-footer">
        Panel Footer
    </div>
</div>
