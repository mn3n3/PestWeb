<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>FalconsSoft</title>
    @Styles.Render("~/Content/AllMyCss")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>



    <div class="container" dir="@(Pets_Web.Helpers.CultureHelper.IsRighToLeft() ? "Rtl" : "Ltr")">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">


                <div class="login-panel panel panel-success">

                    <div class="panel-heading">
                        <h3 class="panel-title">
                             @Resources.Resource.Login
                            @if (Resources.Resource.CurLang == "Arb")
                            {<a style="float:left" href="/Home/SetCulture?culture=en"><i class="fa fa-language fa-fw"></i> English</a>}
                            else
                            { <a style="float:right" href="/Home/SetCulture?culture=ar"><i class="fa fa-language fa-fw"></i> عربي</a>}
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div style="margin-left:25px;margin-right:25px;">
                            @RenderBody()

                        </div>

                    </div>
                    <div class="panel-footer">
                      
                        @*//  <button type="button" class="btn btn-outline btn-info  btn-block "> <i class="fa   fa-heart"></i> @Resources.Resource.MoreAboutFalconsSoftHR</button>*@


                    </div>

                </div>
            </div>
        </div>
    </div>




    @Scripts.Render("~/bundles/lib")

    @RenderSection("scripts", required: false)
</body>
</html>
